{
  "name": "inventory-app",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier . --write",
    "deploy": "npm run build && vite preview --host",
    "docs:build": "mkdir -p docs && swagger-cli bundle openapi.yaml --outfile docs/openapi.json --type json && redoc-cli bundle openapi.yaml -o docs/index.html",
    "prepare": "husky install",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:e2e": "start-server-and-test dev http://localhost:5173 cy:run",
    "lighthouse": "lighthouse http://localhost:5173 --output html --output-path=tests/perf/lighthouse-report.html",
    "webpagetest": "webpagetest test http://localhost:5173 --key $WPT_API_KEY"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@supabase/supabase-js": "^2.42.5",
    "daisyui": "^5.0.50",
    "framer-motion": "^12.23.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^6.30.1",
    "uuid": "^11.1.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.32.0",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.1.2",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.17",
    "babel-jest": "^30.0.5",
    "cypress": "^14.5.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^24.0.0",
    "lighthouse": "^12.0.0",
    "lint-staged": "^16.1.4",
    "postcss": "^8.4.32",
    "prettier": "^3.4.2",
    "redoc-cli": "^0.13.21",
    "start-server-and-test": "^2.0.4",
    "tailwindcss": "^3.4.1",
    "vite": "^4.0.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-imagemin": "^0.6.1",
    "vitest": "^1.6.0",
    "webpagetest": "^0.7.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,json}": [
      "prettier --write"
    ]
  }
}
