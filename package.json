{
  "name": "inventory-app",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "analyze": "ANALYZE=true vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier . --write",
    "deploy": "npm run build && vite preview --host",
    "docs:build": "mkdir -p docs && redocly bundle openapi.yaml -o docs/openapi.json --ext json && redoc-cli bundle openapi.yaml -o docs/index.html",
    "prepare": "husky install",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:e2e": "start-server-and-test dev http://localhost:5173 cy:run",
    "e2e": "start-server-and-test dev http://localhost:5173 cy:run",
    "lighthouse": "lighthouse http://localhost:5173 --output html --output-path=tests/perf/lighthouse-report.html",
    "webpagetest": "webpagetest test http://localhost:5173 --key $WPT_API_KEY"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@supabase/supabase-js": "^2.42.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.541.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^6.30.1",
    "react-window": "^1.8.10",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.32.0",
    "@redocly/cli": "^2.0.5",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vheemstra/vite-plugin-imagemin": "^2.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.17",
    "babel-plugin-transform-vite-meta-env": "^1.0.3",
    "cypress": "^14.5.4",
    "daisyui": "^5.0.54",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "jsdom": "^24.0.0",
    "lighthouse": "^12.0.0",
    "lint-staged": "^16.1.4",
    "msw": "^2.11.1",
    "postcss": "^8.4.32",
    "prettier": "^3.4.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "start-server-and-test": "^2.0.4",
    "tailwindcss": "^4.1.12",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.4.2",
    "vite": "^4.0.0",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^1.6.0",
    "webpagetest": "^0.7.6",
    "whatwg-fetch": "^3.6.20"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,json}": [
      "prettier --write"
    ]
  }
}
